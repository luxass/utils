{
  "name": "@luxass/utils",
  "version": "2.0.0",
  "description": "A collection of utilities for JavaScript/TypeScript",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.9.0",
  "license": "MIT",
  "homepage": "https://github.com/luxass/utils",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/utils.git"
  },
  "bugs": {
    "url": "https://github.com/luxass/utils/issues"
  },
  "keywords": [
    "utils"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./string": "./dist/string.js",
    "./guards": "./dist/guards.js",
    "./number": "./dist/number.js",
    "./types": "./dist/types.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.18.1",
    "@types/node": "^22.15.2",
    "@vitest/coverage-v8": "3.1.2",
    "eslint": "^9.25.1",
    "eslint-plugin-format": "^1.0.1",
    "publint": "^0.3.12",
    "tsdown": "^0.9.9",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2",
    "vitest-package-exports": "^0.1.1"
  }
