{
  "name": "@luxass/utils",
  "version": "1.2.1",
  "description": "A collection of utilities for JavaScript/TypeScript",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.9.0",
  "license": "MIT",
  "homepage": "https://github.com/luxass/utils",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/utils.git"
  },
  "bugs": {
    "url": "https://github.com/luxass/utils/issues"
  },
  "keywords": [
    "utils"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./guards": {
      "import": {
        "types": "./dist/guards.d.ts",
        "default": "./dist/guards.js"
      },
      "require": {
        "types": "./dist/guards.d.cts",
        "default": "./dist/guards.cjs"
      }
    },
    "./number": {
      "import": {
        "types": "./dist/number.d.ts",
        "default": "./dist/number.js"
      },
      "require": {
        "types": "./dist/number.d.cts",
        "default": "./dist/number.cjs"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types.d.ts",
        "default": "./dist/types.js"
      },
      "require": {
        "types": "./dist/types.d.cts",
        "default": "./dist/types.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.18.1",
    "@types/node": "^22.15.2",
    "eslint": "^9.25.1",
    "eslint-plugin-format": "^1.0.1",
    "publint": "^0.3.12",
    "tsdown": "^0.9.9",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  }
}
